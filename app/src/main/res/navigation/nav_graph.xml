<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <!-- Home Fragment -->
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.taskholic.HomeFragment"
        android:label="Home">

        <!-- Переход на Pomodoro -->
        <action
            android:id="@+id/action_home_to_pomodoro"
            app:destination="@id/pomodoroFragment" />

        <!-- Переход на TaskLists -->
        <action
            android:id="@+id/action_home_to_taskLists"
            app:destination="@id/taskListsFragment" />

        <!-- Переход на QuoteFragment -->
        <action
            android:id="@+id/action_home_to_quote"
            app:destination="@id/quoteFragment" />
    </fragment>

    <!-- Pomodoro Fragment -->
    <fragment
        android:id="@+id/pomodoroFragment"
        android:name="com.example.taskholic.ui.pomodoro.PomodoroFragment"
        android:label="Pomodoro" />

    <!-- TaskLists Fragment -->
    <fragment
        android:id="@+id/taskListsFragment"
        android:name="com.example.taskholic.ui.tasklists.TaskListsFragment">

        <action
            android:id="@+id/action_taskListsFragment_to_tasksFragment"
            app:destination="@id/tasksFragment" />
    </fragment>

    <!-- Tasks Fragment -->
    <fragment
        android:id="@+id/tasksFragment"
        android:name="com.example.taskholic.ui.tasks.TasksFragment">
        <argument
            android:name="taskListId"
            app:argType="long" />
    </fragment>

    <!-- Quote Fragment -->
    <fragment
        android:id="@+id/quoteFragment"
        android:name="com.example.taskholic.ui.quote.QuoteFragment"
        android:label="Motivation Quote"
        tools:layout="@layout/fragment_motivation_quote" />

</navigation>
